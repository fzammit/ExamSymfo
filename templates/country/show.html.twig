{% extends 'base.html.twig' %}

{% block title %}Liste des Pays{% endblock %}

{% block body %}

<h1 class="text-center">{{country.name}}</h1>

<table class="table container">
    <thead>
        <tr>
            <th>#</th>
            <th>name</th>
            <th>contaminés</th>
            <th>guéris</th>
            <th>zombifiés</th>
        </tr>
    </thead>
    <tbody>
        {% for stats in country.stat %}
        <tr>
            <th>{{country.id}}</th>
            <th>{{country.name}}</th>
            <th>{{stats.contaminated}}</th>
            <th>{{stats.healed}}</th>
            <th>{{stats.zombified}}</th>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}